<h1><img src="assets/images/burger_icon.png">Burger List</h1>

<h2> Create a Burger!</h2>
<form class="create-form">

    <div class="form-group">
        <label for="burger">burger name:</label>
        <input type="text" id="burger" name="name">
    </div>

    <button type="submit">Add a new burger</button>
</form>


{{!-- {{{devoured}}} --}}
<div>
    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> devoured devoured=false}}
        {{/unless}}
        {{/each}}

    </ul>
</div>


<div>
    <ul id="devoured_burgs">
        {{#each burgers}}
        {{#if devoured}}
        {{> devoured devoured=true}}
        {{/if}}
        {{/each}}
    </ul>
</div>